 <%= form_for ([@user, @event]) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h4 class="form-group">New Event</h4>
  <div class="form-group">
    <%= label_tag 'Title' %>
    <%= f.text_field :name, :class=>"form-control", :placeholder => "Untitled event" %>
  </div>
  <div class="form-group">
    <%= label_tag 'Start' %>
    <%= f.text_field :start_time, :class=>"form-control", :id => "start_time_picker", :placeholder => DateTime.current().to_formatted_s(:custom) %>
  </div>
  <div class="form-group">
    <%= label_tag 'End' %>
    <%= f.text_field :end_time, :class=>"form-control", :id => "end_time_picker", :placeholder => DateTime.current().to_formatted_s(:custom) %>
  </div>
  <div class="form-group">
      <%= label_tag 'Description' %>
      <%= f.text_area :description, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Event", :class=>"btn btn-default" %>
  </div>
<% end %>
</div>