<!DOCTYPE html>
<html>
<head>
  <title>Tudu</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |name,msg| %>
<%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<% if (@splash) %>
	<%= yield %>
<% else %>
	<%= render "layouts/navbar" %>
	<%= render "layouts/sidebar" %>
	<div class="pull-left">
		<%= yield %>
	</div>
<% end %>
</body>
</html>
