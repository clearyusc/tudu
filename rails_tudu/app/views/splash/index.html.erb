
<div class="container">
	<div class="span12 offset1">
		<%= image_tag("checkmark-512.png", :class=>"logo-scaled" ), :url => home_path %>
		<%= form_for @user, :as => :user, :class=> "form-signin", :url => splash_index_path(@user) do |f| %>
		<h1 class="form-signin-heading">You Have A Lot Tudu</h1>
		<%= f.text_field :username, :class => "form-control",:autofocus => true,:required => true, :placeholder => "Email Address" %>
		<%= f.text_field :password, :class => "form-control",:required => true, :placeholder => "Placeholder" %>
		<%= f.label :remember_me, :class => "checkbox" %>
		<%= f.check_box :remember_me %>
		
		<%= f.submit "Sign In", :class=>"btn btn-lg btn-primary btn-block" %>
		<%= link_to "Sign Up", new_user_path %>
		
		<% end%>
	</div>
</div> <!-- /container -->
	

