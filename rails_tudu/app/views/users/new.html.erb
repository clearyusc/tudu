<div class="container">
<h1>Register at Tudu</h1>
<%= link_to 'Go Back', users_url %>	
<%= form_for :user, url: users_path do |f| %>
	<% if @user.errors.any? %>
	<div id="error_window">
		<h2><%= pluralize(@user.errors.count, "error") %> kept this from being created.</h2>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
	<% end %>

	<fieldset>
		<%= f.label :email %><%= f.text_field :email %><br>
		<%= f.label :password %><%= f.password_field :password %><br>
		<%= f.label :password_confirmation, 'Confirm' %><%= f.password_field :password_confirmation %><br>
		<%= f.label :terms_of_service %><%= f.check_box :terms_of_service %><br>
		<%= f.submit %>
	</fieldset>
<% end %>
</div>